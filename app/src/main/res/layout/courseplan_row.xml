<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:clickable="true"

    android:foreground="?attr/selectableItemBackground"

    >
    <!--{"station":[{"station_id":"kattappana","pincode":"686687","district_id":"3",-->
    <!--"address":"Kattappana","phone":"04898745854","station_type":"2","password":""},-->
<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:weightSum="1"
    android:layout_height="30dp">
    <TextView

        android:layout_height="match_parent"
        android:id="@+id/station_id"
        android:layout_width="match_parent"

        android:gravity="center"
        android:text="this is place"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/delete"
android:visibility="invisible"

android:background="@drawable/ic_delete"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
   />

    <Button
        android:background="@drawable/ic_file_download"
        android:id="@+id/downlord"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete"
 />

</RelativeLayout>







    <TextView
        android:visibility="visible"
        android:gravity="center_vertical"
android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:id="@+id/station_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="10dip"
        android:text=""
        android:layout_below="@+id/place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center_vertical"

        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_width="fill_parent"

        android:textColor="#343434"
        android:textSize="10dip"
        android:text="Address:"
        android:layout_below="@+id/adress"
 />
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/pincode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="#343434"
            android:textSize="10dip"
            android:text="Pincode:686692"
            android:layout_below="@+id/adress"
            />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:textColor="#343434"
            android:textSize="10dip"
            android:text="Phone:9947518756"
            android:layout_below="@+id/adress"
            />
    </LinearLayout>

</LinearLayout>
    <!-- Rightend Arrow -->



</android.support.v7.widget.CardView>