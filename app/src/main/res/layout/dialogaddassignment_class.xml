            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Type"

            android:inputType="text"
            android:text=""
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
